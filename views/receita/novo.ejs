<%- include('../partials/header.ejs') %>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
<%- include('../partials/navbar.ejs') %>
<%- include('../partials/menu.ejs') %>
 

  <div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Cadastro de nova receita</h1>
          </div>
          <div class="col-sm-6">
           
          </div>
        </div>
      </div>
    </section>

        <div class="card-header">
     <%- messages.info ? `<div class="alert alert-info"> <button type="button" class="close" data-dismiss="alert"
          aria-hidden="true" > &times; </button> ${messages.info} </div>` : '' %> </div>
          
    <section class="content">     
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Preencha os campos</h3>
          <div class="card-tools">
           <a href="/receita/index" type="submit" class="btn btn-primary btn-block">Voltar</a>  
          </div>
        </div>
        <form action="/receita/salvar" method="post">
        <div class="card-body">          
               <div class="row">
                    <div class="col-sm-12">
                         <label>Nome</label>    
                          <input type="text" class="form-control" name="nome" placeholder="Nome" required>                    
                    </div> 
                  </div>

                   <div class="row">
                    <div class="col-sm-12">
                      <div class="form-group">
                  <label>Status</label>
                  <select class="form-control select2bs4" style="width: 100%;" name="status" required>                  
                    <option value="S" selected>Ativo</option>                
                  </select>
                </div>           
                    </div> 
                  </div>


                </div> 
        </div>
        <div class="card-footer">
          <div class="row">
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary btn-block" >Salvar</button>
            </div>
          </div>

        </form>

      </div>
    </section>
  </div>

 <%- include('../partials/footer.ejs') %>
  <aside class="control-sidebar control-sidebar-dark">
  </aside>
</div>
 <%- include('../partials/script.ejs') %>
</body>
</html>
