<%- include('../partials/header.ejs') %>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
<%- include('../partials/navbar.ejs') %>
<%- include('../partials/menu.ejs') %>
 

  <div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Cadastro de novos usuario</h1>
          </div>
          <div class="col-sm-6">
           
          </div>
        </div>
      </div>
    </section>

        <div class="card-header">
     <%- messages.info ? `<div class="alert alert-info"> <button type="button" class="close" data-dismiss="alert"
          aria-hidden="true" > &times; </button> ${messages.info} </div>` : '' %> </div>
          
    <section class="content">     
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Preencha os campos</h3>
          <div class="card-tools">
              <a href="/usuario/index" type="submit" class="btn btn-primary btn-block">Voltar</a>  
          </div>
        </div>
        <form action="/usuario/update" method="post">
        <div class="card-body">          
               <div class="row">                   
                    <div class="col-sm-6">
                         <label>Nome</label>    
                          <input type="text" value="<%= data[0].nome %>" class="form-control" name="nome" placeholder="Nome" required>     
                           <input type="text" value="<%= data[0].id %>" name="id" hidden>              
                            <input type="text" value="<%= data[0].id_empresa %>" name="id_empresa" hidden>                             
                    </div> 
                     <div class="col-sm-6">
                         <label>Email</label>    
                          <input type="text" class="form-control" value="<%= data[0].email %>" name="email" placeholder="Nome" required>                    
                    </div>
                    </div>

                      <div class="row">
                        <div class="col-sm-6">
                         <label>Senha</label>    
                          <input type="password" class="form-control" name="senha" placeholder="Senha" required>                    
                    </div> 
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Status</label>
                           <select class="form-control select2bs4" style="width: 100%;" name="ativo" required>
                             <option value="S" <%= data[0].ativo === 'S' ? 'selected' : '' %>>Ativo</option>
                             <option value="N" <%= data[0].ativo === 'N' ? 'selected' : '' %>>Desativado</option>
                           </select>
                      </div>           
                    </div> 
                  </div>


                </div> 
        </div>
        <div class="card-footer">
          <div class="row">
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary btn-block" >Salvar</button>
            </div>
          </div>

        </form>

      </div>
    </section>
  </div>

 <%- include('../partials/footer.ejs') %>
  <aside class="control-sidebar control-sidebar-dark">
  </aside>
</div>
 <%- include('../partials/script.ejs') %>
</body>
</html>
